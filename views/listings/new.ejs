<% layout("./layouts/boilerplate") %>
<div class="row">
  <div class="col-8 offset-2">
<body>
  <br>
  <br>
    <h3>Create a new list:</h3>
    <form method="POST" action="/listings">
        <div class="mb-3">
            <label for="title" class="form-label">Title:</label>
            <input class="form-control" type="text" id="title" name="listing[title]" placeholder="enter title"><br>
        </div>
        
        <div class="mb-3">
            <label for="description" class="form-label">Description:</label>
            <textarea class="form-control" name="listing[description]" placeholder="enter description"  required></textarea><br>
        </div>

        <div class="mb-3" >
            <label for="image" class="form-label">Image Link:</label>
            <input name="listing[image]" placeholder="enter image url/link" type="text" class="form-control">
        </div>
        
        <div class="row">
        <div class="mb-3 col-md-2">
            <label for="price" class="form-label">Price:</label>
        <input  placeholder="enter price" class="form-control" type="number" id="price" name="listing[price]" required><br>
        </div>

        <div class="mb-3 col-md-4">
            <label for="country" class="form-label">Country:</label>
        <input type="text" placeholder="enter country" id="country"  class="form-control"  name="listing[country]" required><br>
        </div>
        
        <div class="mb-3 col-md-4">
            <label for="location" class="form-label">Location:</label>
        <input  class="form-control" placeholder="location" type="text" id="location" name="listing[location]" required><br>
        </div>
        </div>
        

        <button class="btn btn-dark add-btn" type="submit">Add</button>
        <br>
        <br>
    </form>
</body>
</div>
</div>
